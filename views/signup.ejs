        <section class="vh-100" style="background-color: #508bfc;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                
                                <% if (message.length > 0) { %>
                                    <div class="alert alert-danger">
                                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                        <strong><%= message %></strong>
                                    </div>
                                <% } %>
                             

                                <h3 class="mb-5">Sign Up</h3>

                                <form action="/addUser" method="post">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typeEmailX-2">Name</label>
                                    <input type="text" id="typeEmailX-2" name="name" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typeEmailX-2">Email</label>
                                    <input type="email" id="typeEmailX-2" name="email" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typeEmailX-2">Phone</label>
                                    <input type="text" id="typeEmailX-2" name="phone" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typePasswordX-2">Password</label>
                                    <input type="password" id="typePasswordX-2" name="password" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="typePasswordX-2">Confirm Password</label>
                                    <input type="password" id="typePasswordX-2" name="confpassword" class="form-control form-control-lg" />
                                </div>

                                <!-- <div class="form-outline mb-4">
                                    <input type="hidden" id="typePasswordX-2" name="roll" value="U" class="form-control form-control-lg" />
                                </div> -->

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Sign Up</button>
                                <div class="mt-2">
                                    <p class="mb-0">Already have an account? <a href="signin"
                                            class="text-dark-50 fw-bold">Sign In</a>
                                    </p>
                                </div>

                                </form>
